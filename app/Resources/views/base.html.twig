{% set logged = app.user is not null ? true : false %}
<!DOCTYPE html>
<html lang="fr">
    <head>
        <meta charset="UTF-8"/>
        <title>
            {% block title %}Welcome!{% endblock %}
        </title>
        <link rel="stylesheet" href="{{ asset('/css/main.css')}}" type="text/css"/>
        {% block stylesheets %}{% endblock %}
        <link rel="icon" type="image/x-icon" href="{{ asset('favicon.ico') }}"/>
    </head>
    <body>
        <a href="{{ path('home') }}">
            <div id="header-logo">
            </div>
        </a>

        <span class="header-buttons">
        {% if logged %}
            <a href="{{ path('fos_user_security_logout') }}" class="btn btn-default">
                <i class="fa fa-sign-out" aria-hidden="true"></i>
                Logout
            </a>
        {% else %}

        <a href="{{ path('fos_user_registration_register') }}" class="btn btn-default">
            <i class="fa fa-user-plus" aria-hidden="true"></i>
            Register
        </a>
        <a href="{{ path('fos_user_security_login') }}" class="btn btn-default">
            <i class="fa fa-sign-in" aria-hidden="true"></i>
            Login
        </a>
        {% endif %}
        </span>

        <div class="container">
            {% for label, flashes in app.session.flashbag.all %}
                {% for flash in flashes %}
                    <div class="alert alert-{{ label }}" role="alert">
                        {{ flash }}
                    </div>
                {% endfor %}
            {% endfor %}

            {% block body %}{% endblock %}
        </div>
        <script type="text/javascript" src="{{ asset('/js/main.js')}}"></script>
        <script src="{{ path('fos_js_routing_js', { callback: 'fos.Router.setData' }) }}"></script>
        {% block javascripts %}{% endblock %}
    </body>
</html>
