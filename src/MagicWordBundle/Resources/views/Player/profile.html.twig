{% extends '::base.html.twig' %}

{% block body -%}
<div class="panel panel-default">
    <div class="panel-heading">
        <h4>
            {{ 'profile_of' | trans }} {{ user.username }}
            <span class="pull-right">
                {% if user == app.user %}
                    <a class="btn btn-default" href="{{ path('profile_edit') }}">{{ 'edit_profile' | trans }}</a>
                {% elseif user in app.user.friends %}
                    <a class="btn btn-default" href="{{ path('remove_friend', {"id":  user.id}) }}">{{ 'remove__from_friends' | trans }}</a>
                {% else %}
                    <a class="btn btn-default" href="{{ path('add_friend', {"id":  user.id}) }}">{{ 'add_to_friends' | trans }}</a>
                {% endif %}
                {% include "MagicWordBundle:Common:backtohome.html.twig" %}
            </span>
        </h4>
    </div>
    <div class="panel-body">
        {% if user.profilePic %}
            <img height="200px" src="{{ asset('upload/profilepic/' ~ app.user.profilepic) }}"/>
        {% endif %}
        {{ user.profileText }}
    </div>
</div>
{% endblock %}
