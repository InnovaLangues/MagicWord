{% extends '::base.html.twig' %}

{% block body -%}
<div class="panel panel-default">
    <div class="panel-heading">
        <h4>
            {{ 'edit_profile' | trans }}
            <span class="pull-right">
                {% include "MagicWordBundle:Common:backtohome.html.twig" %}
            </span>
        </h4>
    </div>
    <div class="panel-body">
        {{ form_start(form) }}
        <div class="form-group">
            {{ form_row(form.profileText) }}
        </div>

        <div class="form-group">
            {{ form_label(form.profilePic) }}
            {{ form_errors(form.profilePic) }}
            {% if app.user.profilepic %}
            <div>
                <img height="200px" src="{{ asset('upload/profilepic/' ~ app.user.profilepic) }}"/>
            </div>
            {% endif %}
            {{ form_widget(form.profilePic) }}
        </div>
        {{ form_end(form) }}
    </div>
</div>
{% endblock %}
