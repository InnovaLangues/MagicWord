{% extends '::base.html.twig' %}

{% block body -%}
<div class="panel panel-default">
    <div class="panel-heading">
        <h4>
            {% include "MagicWordBundle:Common:backtohome.html.twig" %}
            {{ 'parameters' | trans }}
            <span class="pull-right">
                <a class="btn btn-default"href="{{ path('fos_user_change_password') }}">{{ 'edit_password' | trans }}</a>
            </span>
        </h4>
    </div>
    <div class="panel-body">
        {{ form_start(form) }}
        <div class="form-group">
            {{ form_row(form.hidden) }}
        </div>
        <div class="form-group">
            {{ form_row(form.muteSound) }}
        </div>
        <div class="form-group">
            {{ form_row(form.languageUI) }}
        </div>
        {{ form_end(form) }}
    </div>
</div>
{% endblock %}
