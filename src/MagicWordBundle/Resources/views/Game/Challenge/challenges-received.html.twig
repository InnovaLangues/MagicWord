{% extends '::base.html.twig' %}

{% block title %}{{ 'challenge_received' | trans }}{% endblock %}

{% block body -%}
<div class="panel panel-default">
    <div class="panel-heading">
        <h4>
            {{ 'challenge_received' | trans }}
            <span class="pull-right">
                {% include "MagicWordBundle:Common:backtohome.html.twig" %}
            </span>
        </h4>
    </div>
    <ul class="list-group">
    {% for challenge in challenges %}
        <li class="list-group-item">{{ 'from' | trans }} {{ challenge.author.username }} - {{ challenge.date|date("m/d/Y") }}
            <span class="text-muted">({{ challenge.message | truncate(50, true, "...")}})</span>
            <span class="pull-right">
                <a class="btn btn-default btn-xs" href="{{ path('challenge_reply', {"id":  challenge.id}) }}">
                    <i class="fa fa-thumbs-up" aria-hidden="true"></i> {{ "accept_challenge" | trans}}
                </a>
                {% if challenge.rounds|length == 1 %}
                <a class="btn btn-default btn-xs" href="{{ path('challenge_decline', {"id":  challenge.id}) }}">
                    <i class="fa fa-thumbs-down" aria-hidden="true"></i> {{ "decline_challenge" | trans}}
                </a>
                {% endif %}
            </span>
        </li>
    {% endfor %}
    </ul>
</div>
{% endblock %}
