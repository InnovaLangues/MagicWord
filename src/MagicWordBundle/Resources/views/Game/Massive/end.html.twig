{% extends '::base.html.twig' %}

{% block title %}{{ 'massive_end' | trans }}{% endblock %}

{% block body -%}
    <div class="panel panel-default">
        <div class="panel-heading">
            <h4>
                {{ 'massive_end' | trans }} <strong>{{ massive.name }}</strong>
                <span class="pull-right">
                    <a href="{{ path('home') }}" class="btn btn-default">
                        <i class="fa fa-home" aria-hidden="true"></i>
                        {{ "back_to_home"|trans}}
                    </a>
                </span>
            </h4>
        </div>
        <div class="panel-body">

            <!-- Nav tabs -->
            <ul class="nav nav-tabs nav-justified" role="tablist">
                <li role="presentation" class="active"><a href="#rounds" aria-controls="rounds" role="tab" data-toggle="tab">{{ "rounds" | trans }}</a></li>
                <li role="presentation"><a href="#ranking" aria-controls="ranking" role="tab" data-toggle="tab">{{ "ranking" | trans }}</a></li>
            </ul>

            <div class="tab-content">
                <div role="tabpanel" class="tab-pane active" id="rounds">
                    {% include "MagicWordBundle:Game/Massive/partials:rounds.html.twig" %}
                </div>
                <div role="tabpanel" class="tab-pane" id="ranking">
                    {% include "MagicWordBundle:Game/Massive/partials:ranking.html.twig" %}
                </div>
            </div>
        </div>
    </div>
{% endblock %}
