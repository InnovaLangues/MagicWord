{% extends '::base.html.twig' %}

{% block title %}{{ 'massive_end' | trans }}{% endblock %}

{% block body -%}
    <div class="panel panel-default">
        <div class="panel-heading">
            <h4>
                {{ 'massive_end' | trans }}
                <span class="pull-right">
                    <a href="{{ path('home') }}" class="btn btn-default">
                        <i class="fa fa-home" aria-hidden="true"></i>
                        {{ "back_to_home"|trans}}
                    </a>
                </span>
            </h4>
        </div>
        <div class="panel-body">
            <div class="panel-group" id="accordion" role="tablist" aria-multiselectable="true">
            {% for round in massive.rounds %}
                {% set activity = getActivity(round, app.user) %}
                <div class="panel panel-default">
                    <div class="panel-heading" role="tab" id="headingOne">
                        <h4 class="panel-title">
                             <a role="button" data-toggle="collapse" data-parent="#accordion" href="#{{ round.id }}" aria-expanded="true" aria-controls="{{ round.id }}">
                                 {{ "round" |trans }} {{ round.displayOrder + 1}}
                            </a>
                        </h4>
                    </div>
                    <div id="{{ round.id }}" class="panel-collapse collapse" role="tabpanel" aria-labelledby="headingOne">
                        <ul class="list-group" >
                            <li class="list-group-item">
                                {{ "foundables"|trans}} : {{ activity.foundForms |length }} / {{ round.grid.foundableForms | length}}
                            </li>
                            <li class="list-group-item">
                                Points :
                            </li>
                        </ul>
                    </div>
            {% endfor %}
            </div>
        </div>
    </div>
{% endblock %}
