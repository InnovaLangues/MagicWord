<div class="panel-group" id="accordion" role="tablist" aria-multiselectable="true">
{% set total = 0 %}
{% for round in massive.rounds %}
    {% set activity = getActivity(round, app.user) %}
    {% set total = total + activity.points %}
    <div class="panel panel-default">
        <div class="panel-heading" role="tab" id="headingOne">
            <h4 class="panel-title">
                 <a role="button" data-toggle="collapse" data-parent="#accordion" href="#{{ round.id }}" aria-expanded="true" aria-controls="{{ round.id }}">
                     {{ "round" |trans }} {{ round.displayOrder + 1}} ({{ activity.points }}pts)
                </a>
            </h4>
        </div>
        <div id="{{ round.id }}" class="panel-collapse collapse" role="tabpanel" aria-labelledby="headingOne">
            <ul class="list-group" >
                <li class="list-group-item">
                    {{ "foundables"|trans}} : {{ activity.foundForms |length }} / {{ round.grid.foundableForms | length}}
                </li>
                {% if round.objectives is defined %}
                <li class="list-group-item">
                    {{ "objectives"|trans}} : {{ activity.objectivesDone|length }} / {{ activity.round.objectives|length }}
                </li>
                {% endif %}
                <li class="list-group-item">
                    Points : {{ activity.points }}
                </li>
            </ul>
        </div>
    </div>
{% endfor %}

    <div class="panel panel-default">
        <div class="panel-heading" role="tab" id="headingOne">
            <h4 class="panel-title">
                {{ "total" | trans}} : {{ total }}pts
            </h4>
        </div>
    </div>
</div>
