{% extends '::base.html.twig' %}

{% block title %}{{ 'my_massives' | trans }}{% endblock %}

{% block body -%}
    <div class="panel panel-default">
        <div class="panel-heading">
            <h4>{{ 'my_massives' | trans }}</h4>
        </div>
        <ul class="list-group">
            {% for massive in massives %}
            <li class="list-group-item">
                <a href="{{ path('massive_builder', {"id": massive.id}) }}">{{ massive.id }} - {{ massive.name }}</a>
            </li>
            {% endfor %}
        </ul>
    </div>
{% endblock %}
