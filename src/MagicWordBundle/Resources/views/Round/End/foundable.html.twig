<div class="panel panel-default">
    <div class="panel-body">
        <div class="row">
            <div class="col-md-12">
                <div class="panel-group" id="accordion" role="tablist" aria-multiselectable="true">
                    <div class="panel panel-default">
                        <div class="panel-heading">
                             {{ activity.foundForms|length}} {{ "forms_found" | trans }}
                             <span class="pull-right">
                                <button type="button" class="btn btn-default btn-xs" data-order="asc" onclick="sorter.sort('percent', this, '#founded', '#founded div.foundable')">
                                    <i class="fa fa-sort" aria-hidden="true"></i> %
                                </button>
                                <button type="button" class="btn btn-default btn-xs" data-order="asc" onclick="sorter.sort('form', this, '#founded', '#founded div.foundable')">
                                    <i class="fa fa-sort" aria-hidden="true"></i> A-Z
                                </button>
                                <button type="button" class="btn btn-default btn-xs" data-order="asc" onclick="sorter.sort('points', this, '#founded', '#founded div.foundable')">
                                    <i class="fa fa-sort" aria-hidden="true"></i> Points
                                </button>
                                <button type="button" class="btn btn-default btn-xs" data-order="asc" onclick="sorter.sort('length', this, '#founded', '#founded div.foundable')">
                                    <i class="fa fa-sort" aria-hidden="true"></i> Longueur
                                </button>
                             </span>
                        </div>
                    </div>
                    <div id="founded" class="row">
                    {% for foundable in activity.foundForms %}
                    {{ _self.foundable(foundable, activity, activities, "found", roundType) }}
                    {% endfor %}
                    </div>
                </div>
            </div>
            <div class="col-md-12">
                <div class="panel-group" id="accordion" role="tablist" aria-multiselectable="true">
                    <div class="panel panel-default">
                        <div class="panel-heading">
                            {{round.grid.foundableForms|length}} {{ "existing_forms" | trans }}
                            <span class="pull-right">
                               <button type="button" class="btn btn-default btn-xs" data-order="asc" onclick="sorter.sort('percent', this, '#foundable', '#foundable div.foundable')">
                                   <i class="fa fa-sort" aria-hidden="true"></i> %
                               </button>
                               <button type="button" class="btn btn-default btn-xs" data-order="asc" onclick="sorter.sort('form', this, '#foundable', '#foundable div.foundable')">
                                   <i class="fa fa-sort" aria-hidden="true"></i> A-Z
                               </button>
                               <button type="button" class="btn btn-default btn-xs" data-order="asc" onclick="sorter.sort('points', this, '#foundable', '#foundable div.foundable')">
                                   <i class="fa fa-sort" aria-hidden="true"></i> Points
                               </button>
                               <button type="button" class="btn btn-default btn-xs" data-order="asc" onclick="sorter.sort('length', this, '#foundable', '#foundable div.foundable')">
                                   <i class="fa fa-sort" aria-hidden="true"></i> Longueur
                               </button>
                            </span>
                        </div>
                    </div>
                    <div id="foundable" class="row">
                    {% for foundable in round.grid.foundableForms %}
                    {{ _self.foundable(foundable, activity, activities, "foundable", roundType) }}
                    {% endfor %}
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<input type="hidden" id="language" value="{{ round.grid.language.name | slice(0,2) }}">
<div class="modal fade" id="wiktionnary" tabindex="-1" role="dialog">
  <div class="modal-dialog">
    <div class="modal-content">
      <div class="modal-header">
        <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
        <h4 class="modal-title">{{ "definition" | trans }} <strong id="wiktionnary-title"></strong></h4>
      </div>
      <div id="wiktionnary-body"  class="modal-body">
      </div>
      <div class="modal-footer">
        <button type="button" class="btn btn-default" data-dismiss="modal">{{ "close" | trans }}</button>
      </div>
    </div>
  </div>
</div>

{% macro percent(foundable, activities) %}
    {% set found = 0 %}
    {% for a in activities %}
        {% if foundable in a.foundForms %}
            {% set found = found + 1 %}
        {% endif %}
    {% endfor %}
    {{ ((found / activities|length) * 100)| round }}%
{% endmacro %}

{% macro foundable(foundable, activity, activities, type, roundType) %}
{% set percent = _self.percent(foundable, activities) %}
<div class="col-md-4 foundable" data-form="{{ foundable.form }}" data-points="{{ foundable.points }}" data-percent="{{ percent }}" data-length="{{ foundable.form|length }}">
    <div class="panel panel-default">
        <div class="panel-heading " role="tab">
            <h4 class="panel-title {% if foundable in activity.foundForms and type == "foundable" %}bg-success{% endif %} ">
                 <a role="button" data-toggle="collapse" data-parent="#accordion" href="#{{ foundable.id ~ type}}" aria-expanded="true" aria-controls="{{ foundable.id }}">
                     {{ foundable.form | upper }} <span class="text-muted">({{ foundable.points}})</span>
                     {% if roundType != "training" %}
                     <span class="pull-right">
                        <span class="label label-default">{{ percent  }}</span>
                     </span>
                     {% endif %}
                </a>
            </h4>
        </div>
        <div id="{{ foundable.id  ~ type }}" class="panel-collapse collapse" role="tabpanel">
            <div class="list-group" >
                {% for inflection in foundable.inflections %}
                <li class="list-group-item">
                    {{ inflection.content }}
                    ({{ inflection.lemma.content }} - <span class="text-muted">{{ inflection.lemma.category ? inflection.lemma.category.value | trans }}</span>)
                    <span class="pull-right">
                        <span class="btn btn-default btn-xs" onClick="wiktionnary.getDef('{{ inflection.lemma.content }}')">
                            <i class="fa fa-wikipedia-w" aria-hidden="true"></i>
                        </span>
                        {% if isInWordbox(inflection.lemma) == false %}
                        <span class="btn btn-default btn-xs" onclick="addToWordbox({{ inflection.lemma.id }}, this);">
                            <i class="fa fa-plus" aria-hidden="true"></i>
                            {{ "add_to_wordbox_short" | trans}}
                        </span>
                        {% endif %}
                    </span>
                </li>
                {% endfor %}
            </div>
        </div>
    </div>
</div>
{% endmacro %}
