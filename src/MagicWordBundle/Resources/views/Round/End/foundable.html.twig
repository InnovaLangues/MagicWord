{% import "MagicWordBundle:FoundableForm:macros.html.twig" as macros %}

<div class="panel panel-default">
    <div class="panel-body">
        <div class="row">
            <div class="col-md-12">
                <div class="panel-group" id="accordion" role="tablist" aria-multiselectable="true">
                    <div class="panel panel-default">
                        <div class="panel-heading">
                             {{ activity.foundForms|length}} {{ "forms_found" | trans }}
                             <span class="pull-right">
                                <button type="button" class="btn btn-default btn-xs" data-order="asc" onclick="sorter.sort('percent', this, '#founded', '#founded div.foundable')">
                                    <i class="fa fa-sort" aria-hidden="true"></i> %
                                </button>
                                <button type="button" class="btn btn-default btn-xs" data-order="asc" onclick="sorter.sort('form', this, '#founded', '#founded div.foundable')">
                                    <i class="fa fa-sort" aria-hidden="true"></i> A-Z
                                </button>
                                <button type="button" class="btn btn-default btn-xs" data-order="asc" onclick="sorter.sort('points', this, '#founded', '#founded div.foundable')">
                                    <i class="fa fa-sort" aria-hidden="true"></i> Points
                                </button>
                                <button type="button" class="btn btn-default btn-xs" data-order="asc" onclick="sorter.sort('length', this, '#founded', '#founded div.foundable')">
                                    <i class="fa fa-sort" aria-hidden="true"></i> Longueur
                                </button>
                             </span>
                        </div>
                    </div>
                    <div id="founded" class="row">
                    {% for foundable in activity.foundForms %}
                    {{ macros.foundableComplete(foundable, activity, activities, "found") }}
                    {% endfor %}
                    </div>
                </div>
            </div>
            <div class="col-md-12">
                <div class="panel-group" id="accordion" role="tablist" aria-multiselectable="true">
                    <div class="panel panel-default">
                        <div class="panel-heading">
                            {{round.grid.foundableForms|length}} {{ "existing_forms" | trans }}
                            <span class="pull-right">
                               <button type="button" class="btn btn-default btn-xs" data-order="asc" onclick="sorter.sort('percent', this, '#foundable', '#foundable div.foundable')">
                                   <i class="fa fa-sort" aria-hidden="true"></i> %
                               </button>
                               <button type="button" class="btn btn-default btn-xs" data-order="asc" onclick="sorter.sort('form', this, '#foundable', '#foundable div.foundable')">
                                   <i class="fa fa-sort" aria-hidden="true"></i> A-Z
                               </button>
                               <button type="button" class="btn btn-default btn-xs" data-order="asc" onclick="sorter.sort('points', this, '#foundable', '#foundable div.foundable')">
                                   <i class="fa fa-sort" aria-hidden="true"></i> Points
                               </button>
                               <button type="button" class="btn btn-default btn-xs" data-order="asc" onclick="sorter.sort('length', this, '#foundable', '#foundable div.foundable')">
                                   <i class="fa fa-sort" aria-hidden="true"></i> Longueur
                               </button>
                            </span>
                        </div>
                    </div>
                    <div id="foundable" class="row">
                    {% for foundable in round.grid.foundableForms %}
                    {{ macros.foundableComplete(foundable, activity, activities, "foundable") }}
                    {% endfor %}
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<input type="hidden" id="language" value="{{ round.grid.language.name | slice(0,2) }}">
<div class="modal fade" id="wiktionnary" tabindex="-1" role="dialog">
  <div class="modal-dialog">
    <div class="modal-content">
      <div class="modal-header">
        <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
        <h4 class="modal-title">{{ "definition" | trans }} <strong id="wiktionnary-title"></strong></h4>
      </div>
      <div id="wiktionnary-body"  class="modal-body">
      </div>
      <div class="modal-footer">
        <button type="button" class="btn btn-default" data-dismiss="modal">{{ "close" | trans }}</button>
      </div>
    </div>
  </div>
</div>
