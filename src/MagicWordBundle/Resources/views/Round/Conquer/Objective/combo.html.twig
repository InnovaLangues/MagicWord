<div class="panel panel-default">
    <div class="panel-heading">
        &nbsp;
        <span class="pull-right">
            <span class="btn btn-default btn-xs" onclick="addCombo()" >
                <i class="fa fa-plus" aria-hidden="true"></i>
                {{ 'add_combo' | trans }}
            </span>
            <button type="button" class="btn btn-default  btn-xs" data-toggle="modal" data-target="#helper-combos">
                <i class="fa fa-eye" aria-hidden="true"></i>
                {{ 'see_combos' | trans }}
            </button>
        </span>
    </div>

    <ul class="list-group" id="combos" data-prototype="{{ _self.combos_prototype(form.combos.vars.prototype)|e }}">
    {% for combo in form.combos %}
	      {{ _self.combos_prototype(combo) }}
    {% endfor %}
    </ul>
</div>

{% macro combos_prototype(combo) %}
<li class="list-group-item combo">
    {{ form_label(combo.number) }} : {{ form_widget(combo.number) }} - {{ form_label(combo.lenght) }} : {{ form_widget(combo.lenght) }}
    <span class="pull-right">
        <span class="btn btn-danger word-remove">
            <i class="fa fa-times" aria-hidden="true"></i>
        </span>
    </span>
</li>
{% endmacro %}
