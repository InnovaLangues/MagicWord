<ul class="list-group" style="max-height:600px; overflow-y:scroll">
    {% for foundableForm in foundableForms %}
        <li class="list-group-item">
            {{ foundableForm.form }}
            <span class="text-muted">
                ({{ foundableForm.points }}pts)
            </span>
            <span class="btn btn-default btn-xs pull-right" onclick="addInflection('{{ foundableForm.form }}')">
                <i class="fa fa-plus" aria-hidden="true"></i> {{ 'add' | trans }}
            </span>
        </li>
    {% endfor %}
</ul>
