<div class="panel panel-default">
    <div class="panel-heading">
        Liste des formes ({{ foundableForms | length }})
    </div>
    <ul class="list-group" style="max-height:400px; overflow-y:scroll">
        {% for foundableForm in foundableForms %}
            <li class="list-group-item">
                {{ foundableForm.form }}
                <span class="text-muted">
                    ({{ foundableForm.points }}pts)
                </span>
                <span class="btn btn-default btn-xs pull-right" onclick="addInflection('{{ foundableForm.form }}')">
                    <i class="fa fa-plus" aria-hidden="true"></i> {{ 'add_to_findwords' | trans }}
                </span>
            </li>
        {% endfor %}
    </ul>
</div>
