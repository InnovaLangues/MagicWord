{% extends '::base.html.twig' %}

{% block title %}Conquer Builder{% endblock %}

{% block body -%}

<a href="{{ path('massive_builder', {"id": conquer.game.id}) }}" class="btn btn-default btn">
    <i class="fa fa-chevron-left" aria-hidden="true"></i>
    Revenir à la partie
</a>

<div class="panel">
    <div class="panel-body">
        <div class="row">
            <div class="col-md-8">
                <div class="panel panel-default">
                    <div class="panel-heading">
                        Flexions à placer dans la grille
                        <span class="btn btn-default btn-xs pull-right" onclick="generate()">
                            <i class="fa fa-cogs" aria-hidden="true"></i>
                            Générer grille
                        </span>
                        <span class="btn btn-default btn-xs pull-right" type="button" onclick="addRequiredWord()">
                            <i class="fa fa-plus" aria-hidden="true"></i>
                            Ajouter une forme
                        </span>
                    </div>
                    <div class="panel-body">
                        <ul class="list-group" id="words">
                            <li class="list-group-item">
                                <input required type="text" class="word" pattern="[A-Za-z]+" value="" placeholder="mot"/>
                                <input required type="text" class="def" value="" placeholder="définition" />
                                <span class="pull-right">
                                    <span class="btn btn-default">
                                        <i class="fa fa-wikipedia-w" aria-hidden="true"></i>
                                    </span>
                                    <span class="btn btn-danger word-remove">
                                        <i class="fa fa-times" aria-hidden="true"></i>
                                    </span>
                                </span>
                            </li>
                        </ul>
                    </div>
                </div>
                <div class="panel panel-default">
                    <div class="panel-heading">Grille</div>
                    <div class="panel-body">
                        <div class="form-group">

                        </div>
                        <form id="grid" method="POST">
                            <div id="result">
                                {% set grid = conquer.grid %}
                                {% include "MagicWordBundle:Round/Conquer:grid.html.twig" %}
                            </div>
                            <input id="conquerId" type="hidden" name="conquerId" value="{{ conquer.id }}"/>
                            <input id="languageId" type="hidden" name="language" value="{{ conquer.game.language.id }}">
                            <span class='btn btn-primary' onclick="save()">Sauvegarder</span>
                        </form>
                    </div>
                </div>
            </div>
            <div class="col-md-4" >
                <div class="panel panel-default">
                    <div class="panel-heading">
                        Flexions présentes
                        <span class="btn btn-default btn-xs pull-right" type="button" onclick="getInflections()">
                            <i id="inflections-icon" class="fa fa-refresh" aria-hidden="true"></i>
                            Mettre à jour
                        </span>
                    </div>
                    <div class="panel-body" id="inflections"></div>
                </div>
            </div>
        </div>
    </div>
</div>
{% endblock %}

{% block javascripts -%}
    <script type="text/javascript" src="/js/grid_creation.js"></script>
{% endblock %}
