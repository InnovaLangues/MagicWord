{% extends '::base.html.twig' %}

{% block title %}PLAY ROUND{% endblock %}

{% block body -%}

<div class="panel panel-default">
    <div class="panel-heading">
        <h4>Found forms</h4>
    </div>
    <div class="panel-body" id="possible-combos">
        <div class="panel-group" id="accordion" role="tablist" aria-multiselectable="true">
            {% for foundForm in activity.foundForms %}
            <div class="panel panel-default">
                <div class="panel-heading" role="tab" id="headingOne">
                    <h4 class="panel-title">
                        <a role="button" data-toggle="collapse" data-parent="#accordion" href="#{{ foundForm.id }}" aria-expanded="true" aria-controls="{{ foundForm.id }}">
                            {{ foundForm.form | upper }}
                            <span class="text-muted">
                                ({{ foundForm.points }} pts)
                            </span>
                        </a>
                    </h4>
                </div>
                <div id="{{ foundForm.id }}" class="panel-collapse collapse" role="tabpanel" aria-labelledby="headingOne">
                    <div class="list-group" >
                        {% for inflection in foundForm.inflections %}
                        <li class="list-group-item">
                            {{ inflection.content }}
                            ({{ inflection.lemma.content }} - <span class="text-muted">{{ inflection.lemma.category.value }}</span>)
                            <span class="btn btn-default btn-xs" onclick="addToWordbox({{ inflection.lemma.id }})">{{ "add_to_wordbox" | trans}}</a>
                        </li>
                        {% endfor %}
                    </div>
                </div>
            </div>
            {% endfor %}
        </div>
    </div>
</div>

{% endblock %}
